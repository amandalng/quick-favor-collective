    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.status == "verified" %>
          <li class="nav-item">
            <%= link_to "About", about_path, class: "nav-link text-right mr-2" %>
          </li>
          <li class="nav-item">
            <%= link_to "Favors", favors_path, class: "nav-link text-right mr-2" %>
          </li>
          <li class="nav-item">
            <%= link_to "Community", users_path, class: "nav-link text-right mr-2" %>
          </li>
          <li class="nav-item">
            <%= link_to "Profile", user_path(current_user), class: "nav-link text-right mr-2" %>
          </li>
          <% if current_user.admin == false %>
            <li class="nav-item">
              <%= link_to "Contact", contact_path, class: "nav-link text-right mr-2" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Inquiries", inquiries_path, class: "nav-link text-right mr-2" %>
            </li>
          <% end %>

          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link text-right mr-2" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "About", destroy_user_session_path, method: :delete, class: "nav-link text-right mr-2" %>
          </li>
        <% end %>
      <% else %>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link text-right mr-2" %>
