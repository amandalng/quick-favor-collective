<div class="profile-container">

<div class="center mb-3">
  <% if @user.photo %>
    <%= cl_image_tag @user.photo.key, height: 80, width: 80, crop: :fill %>
  <% end %>
</div>
<h2 class="mb-3 text-center"><%= @user.full_name %></h2>

<p><strong>City</strong>: <%= @user.city %></p>
<p><strong>Industry</strong>: <%= @user.industry%></p>
<p><strong>One-liner</strong>: <%= @user.oneliner %></p>
<p><strong>Fun fact</strong>: <%= @user.funfact %></p>

<% if current_user.admin == true %>
  <p class="mb-0"><i class="fas fa-envelope"></i>  <%= @user.email %></p>
<% end %>

<%# if current_user.linkedin.present? %>
  <p class="mt-0"><i class="fab fa-linkedin"></i> <a href=<%= @user.linkedin %> target="_blank">See Profile</a></p>
<%# end %>

<% if current_user.admin == true %>
  <p><strong>Referred by</strong>: <%= @user.referrer %></p>

  <p><strong>Status</strong>:
    <% if @user.verified == true %>
      Verified Member
    <% else %>
      Unverified Applicant <i class="fas fa-exclamation-circle"></i>
    <% end %>
  </p>
<% end %>

<% if @user == current_user %>
  <%= link_to "Edit Profile", edit_user_registration_path(@user) %>
<% end %>

</div>

<%= link_to "< back", :back %>
