<h2 class="text-center mb-4">&#129308; Our Community &#129307;</h2>
<% if false %>
  <h6 class="mt-0 mb-4 text-center">We're a global network of<br><%= User.count %> members across <%= @cities.count %> cities</h6>
<% end %>

<% if current_user.admin == true %>

<h6 class="text-center mt-3"><strong>Unverified Members</strong> <i class="fas fa-exclamation-circle"></i></h6>
<div class="center">
  <%= link_to "See Referrals", referrals_path, class: "mb-3" %>
</div>

<table class="table text-center align-middle">
  <thead class="thead-light">
    <tr>
      <th scope="col"></th>
      <th scope="col">Member</th>
      <th scope="col">Referrer</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% if user.verified == false %>
          <tr>
            <td>
              <%= link_to(user_path(user)) do %>
              <i class="fas fa-info-circle"></i>
              <% end %>
            </td>
            <td><%= user.full_name %></p></td>
            <td><p class="my-0"><%= user.referrer %></p></td>
            <td>
              <% if @user_names.include?(user.referrer) %>
                <i class="fas fa-check-circle"></i>
              <% else %>
                <i class="fas fa-times-circle"></i>
              <% end %>
            </td>
            <td><%= link_to "Verify", "#" %></td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<h6 class="text-center my-2"><strong>Verified Members</strong></h6>

<% end %>

<p class="text-center mb-2">Search by...</p>
<select id="cities" name="cities" class="btn btn-block btn-secondary">
  <option> All cities </option>
  <% @cities.each do |city| %>
    <option value= <%= city %>> <%= city %> </option>
  <% end %>
</select>

<select id="industries" name="industries" class="btn btn-block btn-secondary mb-3">
  <option> All industries </option>
  <% @industries.each do |industry| %>
    <option value= <%= industry %>> <%= industry %> </option>
  <% end %>
</select>

<table class="table text-center align-middle" id="userTable">
  <thead class="thead-light">
    <tr>
      <th scope="col"></th>
      <th scope="col">Member</th>
      <th scope="col">One-liner</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% if user.verified == true %>
        <tr class="userRow">
          <td>
            <%= link_to(user_path(user)) do %>
            <i class="fas fa-info-circle"></i>
            <% end %>
          </td>
          <td class="city-industry">
            <p class="mb-2"><strong><%= user.full_name %></strong></p>
            <p class="city-industry-tag"><%= user.city %>, <%= user.industry %></p>
          </td>
          <td><%= user.oneliner %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<% if false %>

<table class="table text-center">
  <thead class="thead-light">
    <tr>
      <th scope="col"></th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th scope="col">City</th>
      <th scope="col">Industry</th>
      <th scope="col">Verified</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to(user_path(user)) do %>
              <i class="fas fa-info-circle"></i>
            <% end %>
          </td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.city %></td>
          <td><%= user.industry %></td>
          <td>
            <% if user.verified == true %>
              <i class="fas fa-check"></i>
            <% else %>
              <%= link_to "Verify", "#" %>
              <p class="my-0">(referred by <%= user.referrer %>)</p>
            <% end %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<%= javascript_pack_tag "dropdown" %>
