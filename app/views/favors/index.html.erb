<% if current_user.verified == true %>
  <h2 class="text-center mb-2">&#128588; Current Favors &#128588;</h2>
  <h6 class="mt-0 mb-4 text-center">Favors will remain online for one week.</h6>

  <% @favors.each do |favor| %>
    <% if favor.end_date >= Date.today %>
      <div class="favor-container">
        <p><strong>Favor:</strong> <%= favor.favor %></p>
        <p><strong>Significance:</strong> <%= favor.significance %></p>
          <p><strong>Details:</strong> <%= favor.details %></p>
        <% if favor.link.present? %>
          <p><strong>Link:</strong> <a href=<%= favor.link %>>
          <%= favor.link %></a></p>
        <% end %>
        <br>
        <% if favor.user == current_user %>
          <p><strong>Posted by:</strong> You &#128169;</p>
        <% else %>
          <p><strong>Posted by:</strong> <%= link_to favor.user.full_name, user_path(favor.user) %></p>
          <p><strong>Contact:</strong> <%= favor.user.email %></p>
          <p><strong>Quick background:</strong> <%= favor.introduction %></p>
          <p><strong>Fun fact:</strong> <%= favor.user.funfact %></p>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <h4 class="text-center mb-3">Thanks for registering for the Quick Favor Collective!</h4>
  <h5 class="text-center">Your account is being verified and will be activated soon. &#128522;</h5>
<% end %>
