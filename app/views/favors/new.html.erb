<div class="container">
  <h2 class="mb-4 text-center">Request a Favor</h2>

  <%= simple_form_for [current_user, @favor] do |f| %>
    <%= f.input :introduction, label: "Make a quick introduction for yourself - any context relevant to your favor would be useful!", hint: "You may want to take from your profile one-liner: #{current_user.oneliner}", :as => :text, :input_html => { 'rows' => 2}  %>
    <%= f.input :favor, label: "What's your favor?", hint: "Remember, these should be quick to fulfill & do-able from a computer or mobile device. Examples: Requests for feedback on a product, introductions to people in a particular field, social media circulation of a new article", :as => :text, :input_html => { 'rows' => 2} %>
    <%= f.input :significance, label: 'Why is this important to you?', :as => :text, :input_html => { 'rows' => 2} %>
    <%#= f.input :details, label: "What exactly do you need people to do?", placeholder: "E.g. This video contains tips for simple behavior changes for a healthier world. Would appreciate if you could like, share, forward, etc. the link below.", :as => :text, :input_html => { 'rows' => 4} %>
    <%= f.input :link, label: 'Link (if applicable)', placeholder: "e.g. www.linktoshare.com" %>

    <%= f.input :location, as: :check_boxes, collection: @countries.sort, label: "Want to target members a specific geography?", hint: "No selection will also send an email to all QFC members" %>

    <%= f.input :industry, as: :check_boxes, collection: @industries.sort, label: "Want to target members a specific field?", hint: "No selection will also send an email to all QFC members" %>

    <div class="center">
      <%= f.button :submit, 'Submit', class: "btn btn-primary btn-block mt-2 mb-4", data: { confirmation: "You sure?"} %>
    </div>
  <% end %>
</div>
